{% schema %}
  {
    "name": "Image Gallery",
    "target": "section",
    "stylesheet": "image-gallery.css",
    "javascript": "image-gallery.js",
    "templates": ["product", "index", "cart", "page"],
    "settings": [
      {
        "type": "text",
        "id": "title_text",
        "label": "Title Text",
        "default": "Because you like"
      },
      {
        "type": "text",
        "id": "tag",
        "label": "Tag",
        "default": "‘Pastels’"
      },
      {
        "type": "text",
        "id": "ideal_size",
        "label": "Ideal Size",
        "default": "Your Ideal Size:"
      },
      {
        "type": "text",
        "id": "size",
        "label": "Size",
        "default": "XL"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
        "id": "image_4",
        "label": "Image 4"
      },
      {
        "type": "image_picker",
        "id": "image_5",
        "label": "Image 5"
      },
      {
        "type": "text",
        "id": "product_title",
        "label": "Product Title",
        "default": "Carla Mauve Silk Corset Top"
      },
      {
        "type": "text",
        "id": "product_price",
        "label": "Product Price",
        "default": "RS. 2,490"
      }
    ]
  }
{% endschema %}
