{% schema %}
  {
    "name": "Cart block",
    "target": "section",
    "javascript": "cart-data-ajax.js",
    "stylesheet": "cart-data-ajax.css",
    "templates": ["product", "cart"],
    "settings": []
  }
{% endschema %}
    