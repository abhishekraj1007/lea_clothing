<cart-data-ajax data-id="{{ block.id }}">
  <div class="cart-container">
    <div class="cart-head">
      <div class="heading-text">
        MORE FOR YOU
      </div>
      <div class="more-link">
        <!-- <a href="https://leaclothingco.com/products" style="color: #6C4A6D;">
          See More
        </a> -->
      </div>
    </div>
  
    <div class="cart-product-container">
    </div>
  </div>
